{
  "name": "md-to-site",
  "version": "1.3.1",
  "description": "Create a static HTML website from a folder containing markdown files.",
  "license": "MIT",
  "author": "Daniele Favi <info@danielefavi.com> (http://www.danielefavi.com)",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\"",
