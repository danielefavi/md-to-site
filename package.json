  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielefavi/md-to-site.git"
  },
  "homepage": "https://github.com/danielefavi/md-to-site#readme",
  "keywords": [
    "markdown",
    "markup",
    "md",
    "html",
    "static",
    "site",
    "directory",
    "folder"
  ],
  "bin": {
    "md-to-site": "cli.js"
  },
  "dependencies": {
    "marked": "^0.8.2",
    "striptags": "^3.1.1"
  }
}
